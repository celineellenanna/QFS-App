    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_full"
        android:layout_marginRight="24dp"
        android:layout_marginTop="25dp"
        android:baselineAlignBottom="false"
        android:scaleType="fitStart"
        android:layout_above="@+id/tvNavViewUsername"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/tvNavViewUsername"
        android:layout_above="@+id/tvNavViewEmail"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image"
        android:layout_marginLeft="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNavViewEmail"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tvNavViewUsername"
        android:layout_alignStart="@+id/tvNavViewUsername" />

</RelativeLayout>